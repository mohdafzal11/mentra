generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── User ───────────────────────────────────────
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  name          String
  avatarUrl     String?   @map("avatar_url")
  intent        String?   // growth | career | peace | confidence
  xp            Int       @default(0)
  level         Int       @default(1)
  streak        Int       @default(0)
  longestStreak Int       @default(0) @map("longest_streak")
  lastActiveAt  DateTime? @map("last_active_at")
  onboarded     Boolean   @default(false)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  chats          Chat[]
  messages       Message[]
  questProgress  UserQuestProgress[]
  xpLogs         XPLog[]
  personaUnlocks UserPersonaUnlock[]
  sessions       Session[]

  @@map("users")
}

// ─── Session (Cookie Auth) ──────────────────────
model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

// ─── Persona ────────────────────────────────────
model Persona {
  id                String   @id @default(uuid())
  name              String
  inspirationSource String   @map("inspiration_source")
  philosophyPrompt  String   @map("philosophy_prompt") @db.Text
  tone              String
  avatarUrl         String?  @map("avatar_url")
  unlockLevel       Int      @default(1) @map("unlock_level")
  category          String   @default("wisdom")
  teaserLine        String?  @map("teaser_line")
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at")

  depths      PersonaDepth[]
  chats       Chat[]
  userUnlocks UserPersonaUnlock[]

  @@map("personas")
}

// ─── Persona Depth Layers ───────────────────────
model PersonaDepth {
  id           String @id @default(uuid())
  personaId    String @map("persona_id")
  depthLevel   Int    @map("depth_level")
  systemPrompt String @map("system_prompt") @db.Text
  description  String
  unlockLevel  Int    @map("unlock_level")

  persona Persona @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@unique([personaId, depthLevel])
  @@map("persona_depths")
}

// ─── Chat ───────────────────────────────────────
model Chat {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  personaId String   @map("persona_id")
  title     String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona  Persona   @relation(fields: [personaId], references: [id])
  messages Message[]

  @@index([userId])
  @@index([personaId])
  @@map("chats")
}

// ─── Message ────────────────────────────────────
model Message {
  id        String   @id @default(uuid())
  chatId    String   @map("chat_id")
  userId    String?  @map("user_id")
  role      String   // user | assistant | system
  content   String   @db.Text
  xpAwarded Int      @default(0) @map("xp_awarded")
  isInsight Boolean  @default(false) @map("is_insight")
  createdAt DateTime @default(now()) @map("created_at")

  chat Chat  @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id])

  @@index([chatId])
  @@map("messages")
}

// ─── Quest ──────────────────────────────────────
model Quest {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  type        String   // reflection | decision | confidence | daily
  xpReward    Int      @map("xp_reward")
  minLevel    Int      @default(1) @map("min_level")
  personaId   String?  @map("persona_id")
  prompt      String   @db.Text
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")

  userProgress UserQuestProgress[]

  @@map("quests")
}

// ─── User Quest Progress ────────────────────────
model UserQuestProgress {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  questId     String    @map("quest_id")
  status      String    @default("active")
  startedAt   DateTime  @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  quest Quest @relation(fields: [questId], references: [id])

  @@unique([userId, questId])
  @@map("user_quest_progress")
}

// ─── XP Log ─────────────────────────────────────
model XPLog {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  amount    Int
  source    String   // message | quest | streak | onboarding | daily_first | level_up
  metadata  String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("xp_logs")
}

// ─── User Persona Unlock ────────────────────────
model UserPersonaUnlock {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  personaId  String   @map("persona_id")
  unlockedAt DateTime @default(now()) @map("unlocked_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona Persona @relation(fields: [personaId], references: [id])

  @@unique([userId, personaId])
  @@map("user_persona_unlocks")
}
